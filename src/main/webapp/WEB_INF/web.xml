<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>AESP Web Application</display-name>

    <!-- (Tùy chọn) Định nghĩa trang chủ mặc định -->
    <!-- Khi người dùng truy cập vào http://localhost:8080/TenDuAn/ -->
    <!-- máy chủ sẽ tự động tìm đến trang register.jsp -->
    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- ======================================================= -->
    <!-- === CẤU HÌNH CHO RegisterController === -->
    <!-- ======================================================= -->

    <!-- Bước 1: Khai báo Servlet -->
    <servlet>
        <!-- Đặt một "biệt danh" cho Servlet của bạn. Tên này là duy nhất. -->
        <servlet-name>RegisterServlet</servlet-name>
        <!-- Chỉ ra đường dẫn đầy đủ đến lớp Java xử lý. PHẢI CHÍNH XÁC. -->
        <servlet-class>com.aesp.controller.Ctroller_Register</servlet-class>
    </servlet>

    <!-- Bước 2: Ánh xạ (Map) một URL tới "biệt danh" đã khai báo -->
    <servlet-mapping>
        <!-- Tên này phải KHỚP 100% với <servlet-name> ở trên -->
        <servlet-name>RegisterServlet</servlet-name>
        <!-- URL mà người dùng sẽ truy cập để gọi đến Servlet này -->
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <!-- ======================================================= -->
    <!-- === SAU NÀY BẠN SẼ THÊM CÁC CONTROLLER KHÁC VÀO ĐÂY === -->
    <!-- ======================================================= -->

</web-app>